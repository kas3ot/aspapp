@model app.Models.Video
<div class="form-group">
    @Html.LabelFor(m => m.Title)
    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Description)
    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 4 })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Genre)
    @Html.EnumDropDownListFor(m => m.Genre, new { @class = "form-control" })
</div>

@if (Model != null && !String.IsNullOrEmpty(Model.VideoImg))
{
    <img src="~/UploadedImages/@Model.VideoImg" />
}

<input type="file" id="upload" name="image" />

@Html.HiddenFor(a => a.Id)
<input type="submit" class="btn btn-primary" value="Save" style="margin-top:2%" />